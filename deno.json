{
  "tasks": {
    "test": "deno test --allow-all",
    "test:contract": "deno test --allow-all tests/contract/",
    "test:integration": "deno test --allow-all tests/integration/",
    "test:unit": "deno test --allow-all tests/unit/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/**/*.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "@std/": "https://deno.land/std@0.208.0/",
    "@upstash/context7-mcp": "npm:@upstash/context7-mcp"
  }
}