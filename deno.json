{
  "name": "@page-carbajal/rampante",
  "version": "0.2.0",
  "license": "MIT",
  "exports": "./src/cli/main.ts",
  "tasks": {
    "dev": "deno run -A src/cli/main.ts",
    "test": "deno test -A",
    "test:contract": "deno test -A tests/contract/",
    "test:integration": "deno test -A tests/integration/",
    "test:unit": "deno test -A tests/unit/",
    "test:performance": "deno test -A tests/performance/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/cli/main.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": ["templates/", "specs/"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["templates/", "specs/"]
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.5",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "test": {
    "include": ["tests/"]
  },
  "publish": {
    "exclude": [".git/", "specs/", ".github/"]
  }
}
