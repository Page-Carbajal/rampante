{
  "name": "@page-carbajal/rampante",
  "version": "0.1.1",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts"
  },
  "tasks": {
    "test": "deno test --allow-all",
    "test:contract": "deno test --allow-all tests/contract/",
    "test:integration": "deno test --allow-all tests/integration/",
    "test:unit": "deno test --allow-all tests/unit/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/**/*.ts",
    "update:command": "deno run --allow-read --allow-write src/cli/update_rampante_command.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.5",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@upstash/context7-mcp": "npm:@upstash/context7-mcp"
  }
}
